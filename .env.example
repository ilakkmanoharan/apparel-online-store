# Firebase Configuration
# These values are already in lib/firebase/config.ts
# But you can move them here for better security in production

NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_auth_domain_here
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id_here
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_storage_bucket_here
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id_here
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id_here
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id_here

# Stripe
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_signing_secret_here
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Example price IDs (from Stripe Products → Prices)
STRIPE_PRICE_DEFAULT_TSHIRT=price_your_price_id_here
STRIPE_PRICE_DEFAULT_DRESS=price_your_price_id_here

# Admin (optional – for /admin dashboard access)
# Option B: allow list of admin emails (no Firestore doc needed). Comma-separated.
NEXT_PUBLIC_ADMIN_EMAILS=your@email.com
# Server-side fallback (API routes); same format
ADMIN_EMAILS=your@email.com

# Optional: OpenAI API key for seed-fashion-products.js (AI-generated product name/description/price from images)
# Without this, the seed script uses fallback names and prices.
OPENAI_API_KEY=sk-your_openai_key_here
